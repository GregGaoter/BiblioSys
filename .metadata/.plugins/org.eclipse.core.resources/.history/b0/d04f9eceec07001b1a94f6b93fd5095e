package com.dsi.bibliosys.biblioback.app;

import org.apache.commons.lang3.StringUtils;

/**
 * Classe abstraite fournissant des mÃ©thodes statiques utilitaires pour
 * l'application.
 */
public abstract class Utils {

	public static final boolean stringCheck(String str) {
		return str != null && str.strip().length() > 0;
	}

	public static final String stringNormalize(String str) {
		if (!stringCheck(str)) {
			throw new IllegalArgumentException("L'argument " + str + " n'est pas valide.");
		}
		return StringUtils.stripAccents(str.toUpperCase());
	}

}
