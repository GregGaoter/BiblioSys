package com.dsi.bibliosys.biblioback.data.entity.util;

import java.util.Locale;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.MessageSource;

import com.dsi.bibliosys.biblioback.app.MessageKey;
import com.dsi.bibliosys.biblioback.app.exception.NullArgumentException;

/**
 * Classe utilitaire pour les entités business.
 */
public final class EntityUtil {

	@Autowired
	private static MessageSource messageSource;

	/**
	 * Retourne le nom simple de la classe en argument comme donné dans le code
	 * source. Retourne un String vide si la classe en argument est anonyme.
	 * 
	 * @param type Classe de l'entité business.
	 * @return Le nom simple de la classe en argument.
	 * @throws NullArgumentException si l'argument est null.
	 */
	public static final String getName(Class<?> type) throws NullArgumentException {
		if (type == null) {
			throw new NullArgumentException(messageSource.getMessage(MessageKey.NULL_ARGUMENT_EXCEPTION.key,
					new String[] { "type" }, Locale.getDefault()));
		}
		return type.getSimpleName();
	}

}
