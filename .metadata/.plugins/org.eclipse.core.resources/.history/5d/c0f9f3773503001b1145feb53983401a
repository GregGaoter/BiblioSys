package com.dsi.bibliosys.biblioback.controller;

import java.util.HashMap;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.dsi.bibliosys.biblioback.data.entity.Adresse;
import com.dsi.bibliosys.biblioback.data.entity.Identifiant;
import com.dsi.bibliosys.biblioback.data.entity.Lieu;
import com.dsi.bibliosys.biblioback.data.entity.Usager;
import com.dsi.bibliosys.biblioback.data.entity.util.EntityUtil;

@RestController
@RequestMapping("/public/inscription")
public class InscriptionController {

	@Autowired
	private Usager usager;
	@Autowired
	private Identifiant identifiant;
	@Autowired
	private Adresse adresse;
	@Autowired
	private Lieu lieu;

	@GetMapping
	public Map<String, Object> getInscriptionEntities() {
		Map<String, Object> inscriptionEntities = new HashMap<>(4);
		inscriptionEntities.put(EntityUtil.getName(Usager.class), usager);
		inscriptionEntities.put(EntityUtil.getName(Identifiant.class), identifiant);
		inscriptionEntities.put(EntityUtil.getName(Adresse.class), adresse);
		inscriptionEntities.put(EntityUtil.getName(Lieu.class), lieu);
		return inscriptionEntities;
	}

	// @RequestBody
	@PostMapping
	public ResponseEntity<Void> postInscriptionEntities(@RequestBody String entity) {
		if (entity == null) {
			return ResponseEntity.noContent().build();
		}
		// inscriptionService.save(inscriptionForm);
		return null;
	}

}
